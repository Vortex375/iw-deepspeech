{
  "name": "iw-deepspeech",
  "version": "0.0.1",
  "description": "Mozilla DeepSpeech package for iw",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npm run build-ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Benjamin Schmitz",
  "license": "ISC",
  "dependencies": {
    "audify": "^1.5.2",
    "deepspeech": "^0.7.0",
    "iw-base": "^0.0.1",
    "pulseaudio2": "^0.2.2",
    "sox-stream": "^2.0.3",
    "speaker": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^13.13.2",
    "typescript": "~3.8.3"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
